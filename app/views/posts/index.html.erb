<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

    <title>게시판 만들기</title>
  </head>
  <body>
    <div class = "container">
      <h1 align = "center", style = "margin-top: 30px; color: #084B8A; font-family: Sans-Serif">게시판 만들기</h1>
    </div>
    
    <div>
      <% @posts.each do |p| %>
      <h3><%= p.title %></h3>
      <h5>><%= p.content %></h5>
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <a class="nav-link active" href='/posts/show/<%= p.id %>'>보기</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"  href='/posts/edit/<%= p.id %>'>수정</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href='/posts/destroy/<%= p.id %>'>삭제</a>
        </li>
      </ul>
    </div>
    
  </body>
  
</html>
